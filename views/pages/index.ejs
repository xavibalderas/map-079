<!DOCTYPE html>
<html>
<head>
  <% include ../partials/header.ejs %>
</head>

<body>

  <header id="title">
    <h1>Finde was du suchst <br>im IKEA Spreitenbach</h1>
  </header>
  <div id="map"></div>

  <div id="app">
    <div class="container-fluid">
      <div class="row">
        <div class="col-8">
          <nav class="navbar navbar-expand-lg navbar-light bg-light">
            <div class="collapse navbar-collapse" id="navbarNav">
              <ul class="navbar-nav">
                <li class="nav-item" v-for="(value, propertyName) in departments">
                  <a class="nav-link" v-on:click.stop.prevent="clickOnFloor(propertyName)"  v-bind:class="[selectedFloor===propertyName ? 'active' : '']" href="#">Etage {{propertyName}}<span class="sr-only">(current)</span></a>
                </li>
              </ul>
            </div>
          </nav>

         <div v-if="departments">
           <template v-for="(value, propertyName) in departments">
             <div v-if="selectedFloor === propertyName " class="container-fluid">
             <dl class="row">
               <template v-for="element in value">
                <dt class="col-sm-3">
                  <a href="#"  v-on:click.stop.prevent="clickOnPlace(element)">{{ element.name }}</a>
                </dt>
                <dd class="col-sm-9">
                    <small v-if="element.data !== undefined">
                      {{element.data.articles.join(', ')}}
                    </small>
                </dd>
                <hr class="col-sm-11 mt-1 mb-1">
              </template>
            </dl>
            </div>
          </template>
         </div>

       </div>
       <div class="col-4">
         <div id="facilities">
           <button type="button" v-on:click.stop.prevent="clickOnGoTo('wc')" class="btn btn-link"><i class="fas fa-male fa-3x"></i><span class="h1">|</span><i class="fas fa-female fa-3x"></i><br>WC</button>
           <button type="button" v-on:click.stop.prevent="clickOnGoTo('disabled')" class="btn btn-link"><i class="fas fa-wheelchair fa-3x"></i><br>WC</button>
           <button type="button" v-on:click.stop.prevent="clickOnGoTo('restaurant')" class="btn btn-link"><i class="fas fa-utensils fa-3x"></i><br>Restaurant<br>& Cafe</button>
         </div>
         <hr>
         <div id="navigation">
           <div>
           <button type="button" v-bind:disabled="navigateDisabled" v-on:click.stop.prevent="clickOnNavigate" class="btn btn-primary"><i class="fas fa-route fa-3x"></i><br>Route</button>
           <button v-if="navDisplay" type="button" v-on:click.stop.prevent="clickOnCancelNavigate" class="btn btn-secondary"><i class="fas fa-backspace fa-3x"></i><br>Abbrechen</button>
         </div>
           <div v-if="navDisplay" class="mt-3">
             <p>{{distance}} m.</p>
             <p>{{time}} min</p>
           </div>
         </div>
       </div>
     </div>

    </div>
  </div>
  <div id="logo">
    <img src="/stylesheets/ikea_logo.png" alt="" class="img-rounded center-block">
  </div>

  <script>
  </script>



</body>
</html>
