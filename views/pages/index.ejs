<!DOCTYPE html>
<html>
<head>
  <% include ../partials/header.ejs %>
</head>

<body>

  <header id="title">
    <h1>Finde was du suchst <br>im IKEA Spreitenbach</h1>
  </header>
  <div id="map"></div>

  <div id="app">
    <div class="container-fluid">
      <div class="row">
        <div class="col-8">
          <nav class="navbar navbar-expand-lg navbar-light bg-light">
            <div class="collapse navbar-collapse" id="navbarNav">
              <ul class="navbar-nav">
                <li class="nav-item" v-for="(value, propertyName) in departments">
                  <a class="nav-link" v-on:click.stop.prevent="clickOnFloor(propertyName)"  v-bind:class="[selectedFloor===propertyName ? 'active' : '']" href="#">Floor {{propertyName}}<span class="sr-only">(current)</span></a>
                </li>
              </ul>
            </div>
          </nav>

         <div v-if="departments">
           <template v-for="(value, propertyName) in departments">
             <div v-if="selectedFloor === propertyName ">
             <ul class="list-group list-group-flush">
              <li class="list-group-item" v-for="element in value">
                <a href="#"  v-on:click.stop.prevent="clickOnPlace(element)">{{ element.name }}</a>
                <p v-if="element.data !== undefined">
                  <small>
                    {{element.data.articles.join(', ')}}
                  </small>
                </p>
              </li>
            </ul>
            </div>
          </template>
         </div>

       </div>
       <div class="col-4">
         <button type="button" v-on:click.stop.prevent="clickOnNavigate" class="btn btn-primary">Go there</button>
         <button type="button" v-on:click.stop.prevent="clickOnCancelNavigate" class="btn">Cancel direction</button>
         <div v-if="navigation">
           <p>Distance: {{distance}}</p>
           <p>Time: {{time}}</p>
         </div>

       </div>
     </div>

    </div>
  </div>
  <div id="logo">
    <img src="/stylesheets/ikea_logo.png" alt="" class="img-rounded center-block">
  </div>

  <script>
  </script>



</body>
</html>
